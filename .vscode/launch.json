{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Vitest Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
            "args": [
                "run",
                "${relativeFile}"
            ],
            "cwd": "${workspaceRoot}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug server.ts",
            "type": "node",
            "request": "launch",
            "args": [
                "server.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug Current File (ts-node)",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}